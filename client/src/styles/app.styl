body
  width 100%
  height 100%
  margin 0
  padding 0
  font-family cursive
  font-size 16px
html,.app
  width: 100%;
  height: 100%;
.app
  background: #fafafa;
  display: flex;
  flex-direction: column;

a
  text-decoration none

ul
  list-style-type: none;
  padding: 0;
  margin: 0

input[type=text],input[type=password],input[type=number],input[type=tel]
  -webkit-appearance: none
  width 100%
  border 1px solid #d8d8d8
  box-sizing border-box
  height 30px
  line-height 30px
  border-radius 3px
  font-size 14px

input::placeholder
  font-size:16px;
  color:#d8d8d8;

button,input,select,textarea
  margin: 0

select
  width 100%
  -webkit-appearance: none;
  align-items: center;
  border: none;
  border-radius: 5px;
  box-shadow: none;
  display: inline-flex;
  font-size: 12px;
  height: 26px;
  justify-content: flex-start;
  line-height: 1.5;
  padding-left: 8px;
  padding-right: 8px;
  position: relative;
  vertical-align: top;
  background-color: #fff;
  border: 1px solid #d8d8d8;
  color: #363636;
  cursor: pointer;
  display: block;
  outline: none;

.icon
  display inline-block
  width 24px
  height 24px
  background-size 100% auto
  background-position center
  background-repeat no-repeat

.cf
  &:after
    content: "";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;

.btn
  background-color: #505050;
  color: #fff;
  cursor: pointer;
  padding: 5px 20px;
  border-radius: 5px;
  &:disable
    background-color: #cecece;